{
   "compilerOptions": {
      "outDir": "./bin",
      "allowJs": true,
      "target": "es6",
      "rootDir": "src",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "sourceMap": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "module": "commonjs",
      "types": ["node"],
      "lib": ["es6", "es2015", "dom", "es2021"],
      "baseUrl": ".",
      "strict": true,
      "importHelpers": true,
      "noImplicitAny": false
   },
   "exclude": ["node_modules", "dist"],
   "include": ["src/**/*"]
}
